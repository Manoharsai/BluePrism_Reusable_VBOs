    </inputs>
    <outputs>
      <output type="text" name="outMessage" stage="outMessage" />
      <output type="flag" name="isValid" stage="isValid" />
    </outputs>
    <onsuccess>f265fc34-6e21-4b46-9e10-45b8bfb72668</onsuccess>
    <code><![CDATA[var fieldList = requiredFields.Split(';').ToList();

if (inData.Rows.Count <= 0 || fieldList.Count <= 0)
{
    outMessage = "Required fields are missing";
    isValid = false;
}
else
{
	var invalidColumns = fieldList.Where(field => !inData.Columns.Contains(field));
	if (invalidColumns.Any())
	{
		outMessage = string.Join(",", invalidColumns.ToList())+" columns not found in the DataTable";
		isValid = false;
	}
	else
	{
		string resultMessage = string.Empty;
		List<string> invalidFields = new List<string>();
		foreach (var field in fieldList)
		{
			var invalidDataRows = inData.AsEnumerable().Where(row => string.IsNullOrWhiteSpace(row[field].ToString())).ToList();
			if (invalidDataRows.Any())
			{
				invalidFields.Add(field + " : "+ invalidDataRows.Count()+ " Rows Invalid");
			}
		}

		outMessage = invalidFields.Any() ? string.Join(";", invalidFields) + (invalidFields.Count > 1 ? "fields" : "field") + " contains Invalid data" : "Valid Data";
		isValid = !invalidFields.Any();
	}
}]]></code>
